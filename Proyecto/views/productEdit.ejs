    <main class="main-register">
        <section class="section-register">
            <h2 class="product-edit-title">Editar <%= detalle.name %></h2>

            <div class="box-img">
                <img class="img-pl" src="/images/<%= detalle.image %>" alt="Foto de Reloj">
            </div>

            <form class="center-register" action="/products/<%= detalle.id %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
                <button class="botonEditar-2"> 
                    <i class="fa-solid fa-folder-plus"> <spam>Edit Picture</spam></i>
                </button>
        
                <br></br>

                <div class="detail-box">
                    <p class="desc-pl">Nombre:</p>
                    <input class="inputBusqueda-prodlist" type="text"  name="nombreProduco" id="nombreProducto" placeholder="<%= detalle.name %>">
                </div>

                <div class="detail-box">
                    <p class="desc-pl">Breve descripción:</p>
                    <textarea class="inputBusqueda-prodlist" type="text" name="descripcionProducto" id="descripcionProducto" required> <%= detalle.short_description %> </textarea>
                </div>

                <div class="detail-box">
                    <p class="desc-pl">Descripción:</p>
                    <textarea class="inputBusqueda-prodlist" type="text" name="descripcionProducto" id="descripcionProducto" required> <%= detalle.description %> </textarea>
                </div>

                <div class="detail-box">
                    <p class="desc-pl">Precio:</p>
                    <input class="inputBusqueda-prodlist" type="tel" placeholder="$ <%= detalle.price %>" name="precio" id="precio">
                </div>
                
                <div><input type="submit" value="Confirmar Cambios" class="send-btn-register"></div>
        
            </form>
        </section>
    </main>

