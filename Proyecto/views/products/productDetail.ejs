<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>
    <main class="main-product">
        <section class="section-product">
            
            <div class="arrow-back">
                <a href="/products">
                    <button class="arrow-btn"><i class="fa-solid fa-angle-left fa-lg"></i></button>
                </a>
            </div>
            
            <div class="img-box">
                
                <img class="product-img" src="/images/products/<%= promesaImagen.name %>" alt="Foto Imagen">
            </div>
                
            <article class="product-detail">
                <h3 class = "marcaReloj"> <%= promesaProducto.name %> </h3>

                <p class="desc-product"><%= promesaProducto.description %></p>
                            
                <!-- <div class = "cantidad">
                    <p>Cantidad</p>
                    <select name = "cantidad" class = "selectorCantidad">
                        <option value = "SeleccionarCantidad">1</option>
                        <option value = "2">2</option>
                        <option value = "3">3</option>
                        <option value = "4">4</option>
                        <option value = "5">5</option>
                    </select>
                </div> 
                </div> -->

                <% if (!locals.isLogged) { %>
                    <div>
                        <p class="desc-product">Tienes que estar logueado para poder comprar, </p>
                        <a href="/users/login"><input type='button'class="login-btn" value="Iniciar sesion"></a>    
                    </div>
                <% } %>

                <div class="botones">
                    <% if (locals.isLogged) { %>
                    <div class="box-prod-detail-btn">
                            <button class ="product-btn-buy" type="submit" id="btnComprarProduct"> Comprar </button> 
                    </div>
                    <% } %>
                    <% if (locals.isLogged && locals.userLogged.idRoleFK==1) { %>
                    <br>
                    <div class="edit-delete">
                        <div class="divDelete">
                            <form class = "botonDeCompra" method="" action="/products/<%= promesaProducto.idProduct %>/edit" >
                                <button class ="product-btn" type="submit" > Edit </button> 
                            </form>
                        </div>
                        <% } %>
                        <% if (locals.isLogged && locals.userLogged.idRoleFK==1) { %>
                            <br>
                        <div class="divDelete">
                            <form class = "botonDeCompra" method="POST" action="/products/delete/<%= promesaProducto.idProduct %>?_method=DELETE" >
                                <button class ="product-btn" type="submit" > Delete </button> 
                            </form>
                        </div>
                        <% } %>
                    </div>
                </div>

            </article>

            </div>
        </section>

    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>