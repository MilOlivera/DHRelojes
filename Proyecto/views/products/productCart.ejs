<%- include('../partials/head.ejs') %>
<body class="body-cart">
    <%- include('../partials/header.ejs') %>
    <main class="main-cart">
        <h1 class="title-cart">Carrito</h1>
        <div class="cart">
            <div class="cart-products">

                <article class="product">

                    <img class="img-cart" src="/images/products/<%= imagenProducto %>" alt="FOTO PRODUCTO">

                    <div class="product-info">
                        <p class="product-name-cart"> <%= nombreProducto %> </p>
                        <p class="product-price-cart"> $ <%= precioProducto %></p>
                    </div>

                    <!-- <p class="product-remove">
                        <i class="fa-solid fa-xmark"></i>
                        <span class="remove">Eliminar</span>
                    </p> -->
                </article>

            </div>

            <div class="purchase-summary">


                <!-- <p class="resume">Resumen</p> -->

                <ul class="purchase-summary-div">


                    <li class="total"> Total:
                        <span> $ <%= precioProducto %> </span>
                    </li>
                </ul>

                <hr class="divider">
                <form action="/products/payment" class="form-cart" method="POST">
                    <button type="submit" class="cart-btn" href="/"> <strong>Finalizar compra</strong>  </button> <br>
                </form>
                <!-- <button type="submit" class="add-btn-cart" href="/">Agregar mas productos</button> <br> -->
            </div>



        </div>

        <br>


    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>