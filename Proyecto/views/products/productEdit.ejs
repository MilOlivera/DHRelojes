<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>
    <main class="main-register">
        <section class="section-register">
            <h2 class="product-edit-title">Editar <%=promesaProducto.name %></h2>

            <div class="box-img">
                <img class="img-pl" src="/images/products/<%= promesaImagen.name %>" alt="Foto de Reloj">
            </div>

            <form class="width-registro" method="POST" action="/products/<%= promesaProducto.idProduct %>/edit?_method=PUT" id="productsValidator">

                <br></br>

                <div>
                    <p class="desc-ep">Nombre:</p>
                    <div class="divGrupo" id="grupo-name">
                        <input class="formInput" type="text"  name="name" id="name" value="<%= promesaProducto.name %>" >
                        <i class="productEditValidacion-estado fas fa-times-circle"></i>
                        <p class="productError">El nombre debe tener al menos cinco caracteres y no puede incluir numeros</p>
                    </div>
                </div>

                <!-- <div>
                    <p class="desc-ep">Breve descripción:</p>
                    <input class="formInput" type="text" name="short_descriptio" id="short_descriptio" value="<%= promesaProducto.description %>" >
                </div> -->

                <div>
                    <p class="desc-ep">Descripción:</p>
                    <div class="divGrupo" id="grupo-description">
                        <input class="formInput" type="text" name="description" id="description" value="<%= promesaProducto.description %>" >
                        <i class="productEditValidacion-estado fas fa-times-circle"></i>
                        <p class="productError">La descripcion debe tener al menos 20 caracteres</p>
                    </div>
                </div>

                <div>
                    <p class="desc-ep">Precio:</p>
                    <div class="divGrupo" id="grupo-price">
                        <input class="formInput" type="number"  name="price" id="price" value="<%= promesaProducto.price %>">
                        <i class="productEditValidacion-estado fas fa-times-circle"></i>
                        <p class="productError">Utilice el "." como separador decimal</p>
                    </div>
                </div>

                <br>

                <div>
                    <select class="formInput" type="text" placeholder="Categoria" name="category" id="category">
                        <option value="" disabled selected>- Seleccione Categoría - </option>
                        <% categorias.forEach(categoria => { %>
                            <option value="<%= categoria.idCategory %>">
                                <%= categoria.name %>
                            </option>
                        <% }); %>
                    </select>
                    <!-- <p class="desc-ep">Categoria:</p>
                    <input class="formInput" type="tel"  name="category" id="category" value="<%= promesaProducto.category %>"> -->
                </div>

                <div><input class="formInput-edit" type="file" placeholder="image" name="image" id="image"></div>
                <br>
                <div><input type="submit" value="Confirmar Cambios" class="send-btn-register"></div>

            </form>
        </section>
    </main>

    <%- include('../partials/footer.ejs') %>
    <script src="/js/productsValidator.js"></script>
</body>
</html>