                <!-- <div class="inputBusqueda-input">
                    <input class="input-register <%= locals.errors && errors.image ? 'is-invalid' : null %>" type="file" class="inputBusqueda" placeholder="image" name="image" id=" ">
                        <img src="/images/users/<%= promesaUsuario.image %>" alt="">
                    </input>
                </div>
                    <% if (locals.errors && errors.image) { %>
