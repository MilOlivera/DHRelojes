<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>
    <main class="main-register">

        <section class="section-register">
            <h2 class="register-txt">Registro</h2>
            <form class="center-register" action="/users" method="POST" enctype="multipart/form-data">
                <!-- NOMBRE -->
                <div><input 
                    type="text"
                    class="inputBusqueda-register <%= locals.errors && errors.name ? 'is-invalid' : null %>"
                    placeholder="Nombre"
                    name="name"
                    id="name"
                    value="<%= locals.oldData ? oldData.name : null %>"></div>
                    <% if (locals.errors && errors.name) { %>
                        <div class="text-danger">
                            <%= errors.name.msg %>
                        </div>
                    <% } %>
                <!-- APELLIDO -->
                <div><input
                    type="text"
                    class="inputBusqueda-register <%= locals.errors && errors.lastname ? 'is-invalid' : null %>"
                    placeholder="Apellido"
                    name="lastName"
                    id="lastName"
                    value="<%= locals.oldData ? oldData.lastName : null %>"></div>
                    <% if (locals.errors && errors.lastName) { %>
                        <div class="text-danger">
                            <%= errors.lastName.msg %>
                        </div>
                    <% } %>
                <!-- MAIL -->
                <div><input
                    type="email"
                    class="inputBusqueda-register <%= locals.errors && errors.mail ? 'is-invalid' : null %>"
                    placeholder="Mail"
                    name="mail"
                    id="mail"
                    value="<%= locals.oldData ? oldData.mail : null %>"></div>
                    <% if (locals.errors && errors.mail) { %>
                        <div class="text-danger">
                            <%= errors.mail.msg %>
                        </div>
                    <% } %>
                <!-- NACIMIENTO -->
                <!-- <div class="inputBusqueda-input"><label class="input-register"><b>Fecha de nacimiento:</b></label>
                <input
                class="input-register <%= locals.errors && errors.birth ? 'is-invalid' : null %>"
                type="date"
                name="Nacimiento"
                name="birth"
                id="birth"
                value="<%= locals.oldData ? oldData.birth : null %>"></div>
                    <% if (locals.errors && errors.birth) { %>
                        <div class="text-danger">
                            <%= errors.birth.msg %>
                        </div>
                    <% } %> -->
                <!-- DNI -->
                <div><input
                    type="number"
                    class="inputBusqueda-register <%= locals.errors && errors.dni ? 'is-invalid' : null %>"
                    placeholder="DNI"
                    name="dni"
                    id="dni"
                    value="<%= locals.oldData ? oldData.dni : null %>"></div>
                    <% if (locals.errors && errors.dni) { %>
                        <div class="text-danger">
                            <%= errors.dni.msg %>
                        </div>
                    <% } %>
                <!-- GENERO -->
                <!-- <label><b>Género</b></label>
                <div><select
                class="input-register <%= locals.errors && errors.genero ? 'is-invalid' : null %>"
                name="genero">
                    <option value=""> Elegí tu género </option>
                    <% let generos = ["Masculino", "Femenino", "Otro"] %>
                    <% for (const unGenero of generos) { %>
                        <option
                            value="<%= unGenero %>"

                            > <%= unGenero %>
                        </option>
                    <% } %>
                </select></div>
                    <% if (locals.errors && errors.genero) { %>
                        <div class="text-danger">
                            <%= errors.genero.msg %>
                        </div>
                    <% } %> -->
                <!-- DIRECCION -->
                <div><input
                    type="text"
                    class="inputBusqueda-register <%= locals.errors && errors.address ? 'is-invalid' : null %>"
                    placeholder="Dirección"
                    name="address"
                    id="address"
                    value="<%= locals.oldData ? oldData.address : null %>"></div>
                    <% if (locals.errors && errors.address) { %>
                        <div class="text-danger">
                            <%= errors.address.msg %>
                        </div>
                    <% } %>
                <!-- CONTRASEÑA -->
                <div><input
                    type="password"
                    class="inputBusqueda-register <%= locals.errors && errors.password ? 'is-invalid' : null %>"
                    placeholder="Contraseña"
                    name="password"
                    id="password"
                    value="<%= locals.oldData ? oldData.password : null %>"></div>
                    <% if (locals.errors && errors.password) { %>
                        <div class="text-danger">
                            <%= errors.password.msg %>
                        </div>
                    <% } %>
                <div><input
                    type="text"
                    class='nullRegister'
                    name="user"
                    id="user" ></div>

                <!-- IMAGEN -->
                <!-- <div class="inputBusqueda-input"><input class="input-register <%= locals.errors && errors.image ? 'is-invalid' : null %>" type="file" class="inputBusqueda" placeholder="image" name="image" id="image"></div> -->
                    <!-- <% if (locals.errors && errors.image) { %>
                        <div class="text-danger">
                            <%= errors.image.msg %>
                        </div>
                    <% } %> -->
                <br></br>
                <div><input type="submit" value="Enviar" class="send-btn-register"></div>
            </form>
        </section>
    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>